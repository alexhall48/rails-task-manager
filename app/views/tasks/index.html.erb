<div>
 <h1>Tasks</h1>
   <div class="list">
    <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.title, task_path(task) %> - <%= task.completed %></li>
      <% end %>
    </ul>
   </div>
</div>

<p><%= link_to 'Add a new task', new_task_path(@task), class: "btn btn-primary mt-3"%></p>
